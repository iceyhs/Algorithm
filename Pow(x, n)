Implement pow(x, n). 


public class Solution {
    public double pow(double x, int n) {
       
        if(n==0) return 1;
      
      
        double v= pow(x,n/2); //binary search log(n)
        
        if(n%2==0)  return v*v;  //even number
        else if(n>0) return v*v*x;   // odd number
        else return v*v/x;
    }
    
    
}
